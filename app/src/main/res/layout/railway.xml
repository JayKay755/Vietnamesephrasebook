<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/railway"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaydevelopment.popkovanton.vietnamesephrasebook.RailwayActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView4">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <TextView
                android:id="@+id/railwayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:text="@string/railwayView"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/railwayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="0"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/railwaySeparator"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/railwayView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="2"
                android:text="@string/railwayView2"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/railwayButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="2"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/railwaySeparator2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/railwayView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="4"
                android:text="@string/railwayView3"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/railwayButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="4"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/railwaySeparator3"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="5"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/railwayView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="6"
                android:text="@string/railwayView4"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/railwayButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="6"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/railwaySeparator4"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="7"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/railwayView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="8"
                android:text="@string/railwayView5"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/railwayButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="8"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/railwaySeparator5"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="9"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/railwayView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="10"
                android:text="@string/railwayView6"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/railwayButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="10"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

        </GridLayout>>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>
</RelativeLayout>

