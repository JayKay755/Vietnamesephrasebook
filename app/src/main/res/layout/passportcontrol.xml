<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passportcontrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaydevelopment.popkovanton.vietnamesephrasebook.PassportcontrolActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView5">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <TextView
                android:id="@+id/passportcontrolView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:text="@string/passportcontrolView"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/passportcontrolButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="0"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/passportcontrolSeparator"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/passportcontrolView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="2"
                android:text="@string/passportcontrolView2"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/passportcontrolButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="2"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/passportcontrolSeparator2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/passportcontrolView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="4"
                android:text="@string/passportcontrolView3"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/passportcontrolButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="4"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/passportcontrolSeparator3"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="5"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/passportcontrolView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="6"
                android:text="@string/passportcontrolView4"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/passportcontrolButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="6"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/passportcontrolSeparator4"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="7"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/passportcontrolView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="8"
                android:text="@string/passportcontrolView5"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/passportcontrolButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="8"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

        </GridLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>
</RelativeLayout>
