<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emergencies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaydevelopment.popkovanton.vietnamesephrasebook.EmergenciesActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView9">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <TextView
                android:id="@+id/emergenciesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:text="@string/emergenciesView"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/emergenciesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="0"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/emergenciesSeparator"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/emergenciesView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="2"
                android:text="@string/emergenciesView2"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/emergenciesButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="2"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/emergenciesSeparator2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/emergenciesView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="4"
                android:text="@string/emergenciesView3"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/emergenciesButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="4"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/emergenciesSeparator3"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="5"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/emergenciesView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="6"
                android:text="@string/emergenciesView4"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/emergenciesButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="6"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/emergenciesSeparator4"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="7"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/emergenciesView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="8"
                android:text="@string/emergenciesView5"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/emergenciesButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="8"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/emergenciesSeparator5"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="9"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/emergenciesView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="10"
                android:text="@string/emergenciesView6"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/emergenciesButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="10"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>

            <View
                android:id="@+id/emergenciesSeparator6"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="11"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/emergenciesView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="12"
                android:text="@string/emergenciesView7"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/emergenciesButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|end"
                android:layout_row="12"
                android:onClick="onClick"
                ads:srcCompat="@mipmap/ic_volume_mute_black_24dp"/>
        </GridLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>
</RelativeLayout>
